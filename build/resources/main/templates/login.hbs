{{#partial "title"}}Login page{{/partial}}


{{#partial "content"}}
<div class="login-page">
      <div class="form">
         <div class="login-form">
             <p>Use <code>admin@admin.com</code> as the Username and <code>admin</code> as the password to login as the administrator. </p>

             <ul class="nav nav-tabs">
                 <li class="active"><a href="#stylist" data-toggle="tab"><strong>Stylist Login</strong></a></li>
                 <li><a href="#client" data-toggle="tab"><strong>Client Login</strong></a></li>
             </ul>

             <!-- Tab panes -->
             <div class="tab-content mb30">
                 <div class="tab-pane active" id="stylist">
                     <h4 class="dark">Login as Stylist <small>(Login with Email Address for Stylists)</small></h4>

                     <form role="form" method="post" action="/stylistLogin">
                         <input type="text" name="email" placeholder="Email" autocomplete="off"/>
                         <input type="password" name="myPassword" placeholder="Password" autocomplete="off"/>
                         <button type="submit">login</button>
                         <p class="message">New clients will be required to <a href="/create_account">Create an Account</a>!</p>
                     </form>
                 </div>
                 <div class="tab-pane" id="client">
                     <h4 class="dark">Login as Client <small>(Login with Username for Clients)</small></h4>
                     <form role="form" method="post" action="/clientLogin">
                         <input type="text" name="username" placeholder="Username" autocomplete="off"/>
                         <input type="password" name="myPassword" placeholder="Password" autocomplete="off"/>
                         <button type="submit">login</button>
                         <p class="message">New clients will be required to <a href="/create_account">Create an Account</a>!</p>
                     </form>
                 </div>
             </div>
         </div>
      </div>
   </div>

{{/partial}}

{{> layout.hbs}}