{{#partial "title"}}Stylists Page{{/partial}}


{{#partial "content"}}
<div class="stylists">
	<h1 class="mb-0"><span class="text-primary">Stylists</span></h1>
    <small><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Go Back Home</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/bookings"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Bookings & Availability</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/logoutClient"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Log Out</a></small>
	<hr>
    <div class="row">
        <div class="col-md-4 stylist-list mb40">
            {{#if stylists}}
                {{#each stylists }}
                    <div>
                        <h3>{{ stylistName }} <small>({{ stylistDept }})</small></h3>
                        <small>Email: <span class="text-primary">{{ stylistEmail }}</span> | Phone: <span class="text-primary">{{ stylistPhone }}</span></small><br>
                        {{#if userRole }}
                            <small><a href=""><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;View Clients and Bookings</a>&nbsp;&nbsp;&nbsp;&nbsp;</small>
                        {{else}}
                        <small><a href="/bookings"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Show Stylist's Availability</a>&nbsp;&nbsp;&nbsp;&nbsp;</small>
                        {{/if}}
                    </div>
                {{/each}}
            {{else}}
                <p>No Stylists!</p>
            {{/if}}
        </div>
        <div class="col-md-4">
            <h3>Schedule for this Week</h3>
            <div>
                <h3><small>Tuesday</small></h3>
                <small class="nomargin">From <span class="text-primary"><strong>9:00AM - 12:00PM</strong></small>&nbsp;&nbsp;|&nbsp;&nbsp;
                <small>Booked by <span class="text-primary"> <strong>Samora Yommie</strong></span></small>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>


{{/partial}}

{{> layout.hbs}}