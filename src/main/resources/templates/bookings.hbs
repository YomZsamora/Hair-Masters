{{#partial "title"}}Bookings and Availability Page{{/partial}}


{{#partial "content"}}

<div class="add-client">
	<h1 class="mb0">Check Stylists' <span class="text-primary">Bookings</span> and <span class="text-primary">Availability</span></h1>
    <small><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Go Back Home</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/bookings"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Bookings & Availability</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/stylists"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;View all Stylists</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/logoutClient"><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp;&nbsp;Log Out</a></small>
	<hr>
   <div class="row">
      <div class="col-md-4">
      	<div class="form-group mb15">
          	<label class="label">Select Appointment Date:</label>
            <form action="/searchBookings" method="post" name="searchBookings">
           	<div class="input-group mb15">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input type="date" placeholder="mm/dd/yyyy" id="booking_date" name="booking_date" class="form-control booking-date" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-primary btn-xs bookings">Check Availability</button>
            </form>
        </div> 
      </div>
      <div class="col-md-8">
          <h3><small>
              {{ selectedDate }}
          </small></h3>
         {{#if bookings }}
             {{#each bookings}}
                 <div class="stylist-details mb40">
                    <h3>{{stylist}} <small>(Booked by {{client}})</small></h3>
                    <small><span class="text-primary">From <strong>{{start_at}}hr</strong> to <strong>{{end_at}}hrs</strong></span>
                        </small>
                 </div>
             {{/each}}
         {{else}}
             {{#if selectedDate}}
             <div class="alert alert-danger mt20">
                 <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                 No Bookings Have Been Scheduled For {{selectedDate}} Yet! Search Specific Date from the Form!
             </div>
             {{else}}
                 <div class="alert alert-danger mt20">
                     <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                     <strong>No Date of Booking has Been Selected</strong> Yet! Search Specific Date from the Form!
                 </div>
             {{/if}}
         {{/if}}
      </div>
   </div>	
</div>

{{/partial}}

{{> layout.hbs}}